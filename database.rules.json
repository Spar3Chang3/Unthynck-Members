{
  "rules": {
    "public": {
      ".read": true,
      "members": {
        ".write": "auth != null && root.child('public/members').child(auth.uid).exists()"
      }
    },
    "private": {
      ".read": false,
      ".write": false
    },
    "contact": {
      ".read": false,
      ".write": true
    }
  }
}
